<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_eng_ru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/text_eng_ru"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/sea_blue"
        android:text="@string/text_eng_ru"
        app:layout_constraintBottom_toTopOf="@+id/text_ru_eng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_text" />

    <Button
        android:id="@+id/text_ru_eng"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/sea_blue"
        android:text="@string/text_ru_eng"
        app:layout_constraintBottom_toTopOf="@+id/voice_eng_ru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_eng_ru" />

    <Button
        android:id="@+id/voice_eng_ru"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/sea_blue"
        android:text="@string/voice_eng_ru"
        app:layout_constraintBottom_toTopOf="@+id/voice_ru_eng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ru_eng" />

    <Button
        android:id="@+id/voice_ru_eng"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/sea_blue"
        android:text="@string/voice_ru_eng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

